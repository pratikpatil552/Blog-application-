<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head")  %>
    <title>Home</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-3">
        <div class="row row-col-4">
            <% allBlogs.forEach(element => { %>
                <div class="col">
                    <div class="card col" style="width: 18rem;">
                        <img src="<%=element.coverImageUrl %>" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= element.title  %></h5>
                          <a href="/blog/<%=element._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include("./partials/scripts") %>
</body>
</html>